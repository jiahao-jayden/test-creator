{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**",
      "!src/components/ui",
      "!src/components/magicui",
      "!src/components/motion-primitives",
      "!src/components/animate-ui",
      "!src/components/ai-elements"
    ],
    "experimentalScannerIgnores": [
      "node_modules",
      ".next",
      "dist",
      "build",
      "src/components/ui/**",
      ".vscode/**",
      ".cursor/**",
      "pnpm-lock.yaml",
      "**/*.md",
      ".source/"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": false,
    "lineEnding": "lf",
    "lineWidth": 100,
    "bracketSameLine": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConsistentArrayType": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noUselessTypeConstraint": "off",
        "noStaticOnlyClass": "off"
      },
      "performance": {
        "noDelete": "off",
        "noImgElement": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "attributePosition": "multiline"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
